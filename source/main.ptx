            <latex-image>
              \begin{tikzpicture}
                \draw (0,0) rectangle (1,1);           
              \end{tikzpicture}
            </latex-image>
          </image>
        </figure>
      </section>

     <section xml:id="sec-second-section">
        <title>Second Section</title>
          <p>
            More words.
          </p>
        
      </section>

    </chapter>

    <backmatter xml:id="backmatter">
      <title>Backmatter</title>

